<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite parallel="tests" name="Suite">
	<groups>
		<run>
			<include name="ErrorHandling"/>
		</run>
	</groups>
	<listeners>
		<listener class-name="rahulshettyacedemy.Testcomponents.Listeners"/>
	</listeners>
  <test thread-count="5" name="Submit Order Test">
    <classes>
      <class name="rahulshettyacedemy.Tests.SubmitOrderTest"/>
    </classes>
  </test> <!-- Test -->
  <test thread-count="5" name="Error Validations Test">
    <classes>
      <class name="rahulshettyacedemy.Tests.ErrorValidationsTest"/>
    </classes>
  </test> 
</suite> <!-- Suite -->
